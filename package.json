{
  "name": "stephenchenorg-astro",
  "type": "module",
  "version": "9.0.0",
  "private": true,
  "description": "Stephenchenorg Astro 前端通用套件",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:core": "yarn core build",
    "build:graphql": "yarn graphql build",
    "test": "run-s test:*",
    "test:core": "yarn core test --run",
    "code-check": "run-s code-check:*",
    "code-check:core": "yarn core code-check",
    "code-check:graphql": "yarn graphql code-check",
    "core": "yarn workspace @stephenchenorg/astro",
    "graphql": "yarn workspace @stephenchenorg/astro-graphql",
    "lint": "eslint .",
    "release": "bumpp --commit \"Release v%s\" -r && npm publish --workspaces"
  },
  "devDependencies": {
    "@ycs77/eslint-config": "^6.2.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-astro-explicit-wrapper": "^1.0.5",
    "npm-run-all2": "^8.0.4"
  }
}
